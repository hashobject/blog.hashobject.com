.top-bar
.top-bar .name
  height: 65px;

  & .toggle-topbar.menu-icon
    top: 0;
    right: 25px;
    margin-top: 0;
    padding-left: 0;

  & div.logo
    margin: 5px 0;
    background-image: url('/images/hashobject-logo.png');
    width: 246px;
    height: 53px;
    &.square
      background-image: url('/images/hashobject-logo-square.png');
      width: 34px;
      height: 34px;
      background-size: 100%;
      background-repeat: no-repeat;
      &:hover
        opacity: 0.8;

  &.expanded div.logo.square
    transform: rotate(90deg);


.contain-to-grid .top-bar
  margin-bottom: 20px;

.contain-to-grid
.top-bar
.top-bar.expanded .title-area
.top-bar-section ul
.top-bar-section li
  background: white;

.top-bar-section ul li
  padding-left: 0;
  padding-right: 0;
  & > a:not(.button)
    padding-top: 15px;
    padding-bottom: 15px;
    background: white;
    color: black;
    font-weight: bold;
    font-size: 16px;
    line-height: 1.2;
    text-transform: uppercase;
    &:visited
      color: black;
  &.active
  &:hover
    & > a:not(.button)
      background-color: $blue-light;
      color: white;
