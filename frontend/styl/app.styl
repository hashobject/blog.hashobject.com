@import "normalize.min.css"
@import "foundation.min.css"
@import "nib"

$blue-light = #1ab7ea
$pink = #eb4d94
$pink-dark = #9e0047
$gray-bg = #eaeced
$gray-dark = #39434a
$green-bright = #99ec51

body
  font-family: 'PT Sans', Tahoma, sans-serif;
  font-size: 14px;
  line-height: 1.4;
  color: #000;

div.logo
  margin: 5px 0;
  background-image: url('/images/hashobject-logo.png');
  width: 246px;
  height: 53px;


body > header.row
  height: 65px;
  margin-bottom: 30px;
  & nav
    position: absolute;
    right: 0;
    top: -5px;
    height: 100%;
    & ul
      height: 100%;
      & li
        height: 100%;
        display: inline-block;
        text-transform: uppercase;
        list-style-type: none;
        margin: 0 10px;
        padding-top: 25px;
        padding-left: 10px;
        padding-right: 10px;
        &.active
        &:hover
          background-color: $blue-light;
          color: white;
          & a
          & a:visited
            color: white!important;
        & a
        & a:visited
          color: black!important;
          font-weight: bold;
          font-size: 18px;
          line-height: 1.2;

p
  margin: 7px 0;

a
  color: $pink;
  text-decoration: none;
  &:visited
    color: $pink-dark;

.post
  margin-bottom: 30px;
  padding: 0 1em;
  position: relative;
  & h1, h2
    font-size: 18px;
    font-weight: bold;
    line-height: 1.2;
  & h1
    text-transform: uppercase;
    margin-bottom: 35px;
  & h2
    color: $blue-light;
    margin: 35px 0 15px;
  & blockquote
    background: $gray-bg;
    border-left: 5px solid $pink;
    color: $gray-dark;
    font-size: 16px;
    font-style: italic;
    margin: 15px 0;
    padding: 15px 15px 15px 25px;
  & pre, code
    background: $gray-dark;
    color: $green-bright;
    display: block;
    font-family: 'Consolas', Courier, monospace;
    margin: 15px 0;
    overflow-x: auto;
    padding: 10px 15px;
  & pre
    padding: 20px 15px;
  & img
    margin: 8px 0;
  & ul
    margin: 15px 0;
    padding-left: 30px;
    & li
      color: $gray-dark;

.post-meta
  margin-bottom: 30px;
  padding: 0 1em;
  & .author-avatar
    float: left;
    margin-right: 5px;
    vertical-align: top;
  & .meta-label
    margin: 0 5px;

.post-discussion,
.license.small-12.columns
  color: $gray-dark;
  font-style: italic;
  margin-bottom: 30px;
  padding: 0 1em;


@media all and (min-width: 750px) {
  .post-meta {
    text-align: left;
    padding: 0;
    position: absolute;
    top: 0;
    width: 95px;
    left: -110px;
  }
}
