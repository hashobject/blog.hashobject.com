body > nav
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80px;
  padding-top: 0px;
  background: none;
  z-index: 1000;
  overflow: hidden;
  transition: all 0.6s cubic-bezier(0.7, 0.01, 0.3, 1);

  & .header
    z-index: 2000;
    margin-top: 0px;
    width: 100%;
    height: 100px;
    background: none;
    transition: all 0.6s cubic-bezier(0.7, 0.01, 0.3, 1);

  & #toggle
    width: 40px;
    height: 74px;
    z-index: 2000;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    cursor: pointer;
    position: absolute;
    top: 40px;
    right: 30px;
    transition: all 0.6s cubic-bezier(0.7, 0.01, 0.3, 1);


    & .icon
      width: 24px;
      height: 4px;
      margin: 0;
      background: #ec008c;
      transition: all 0.3s;
      &:after
      &:before
        content:'';
        display:block;
        width:24px;
        height:4px;
        background:#ec008c;
        position:absolute;
        z-index:-1;
        transition:all 0.3s
      &:before
        top:-8px
      &:after
        top:8px
      &:hover
        opcity: 0.8;

  & #logo
    position: absolute;
    top: 0;
    left: 30px;
    background-image: url('/images/hashobject-logo.png');
    z-index: 2000;
    display: block;
    height: 59px;
    width: 59px;
    margin-top: 20px;
    border: 3px solid white;
    border-radius: 3px;

  &.open
    transition: none;
    height: 100%;
    & .overlay
      background-color: $pink;
      & ul
        top: 0;
        visibility: visible;
        opacity: 1;
        margin-top: 0;
        transform: perspective(600px) rotateX(0deg);
    & .icon
      background: none !important;
      &:before
      &:after
        content: '';
        display: block;
        width: 24px;
        height: 4px;
        background: #ec008c;
        position: absolute;
        z-index: -1;
        transition: all 0.3s;
      &:before
        top: 0 !important;
        background: #fff !important;
        transform: rotate(-45deg);
      &:after
        top: 0 !important;
        background: #fff !important;
        transform: rotate(45deg);
  & .overlay
    z-index: 1500;
    position: absolute;
    top: 0px;
    width: 100%;
    height: 100%;
    background: none;
    display: table;
    transition: background-color 0.6s cubic-bezier(0.7, 0.01, 0.3, 1);
    background: none;

    & ul
      visibility: hidden;
      top: -10%;
      width: 100%;
      padding: 0;
      opacity: 0;
      display: table-cell;
      vertical-align: middle;
      transform: perspective(600px) rotateX(10deg);
      transition: all 0.5s cubic-bezier(0.7, 0, 0.36, 0.63);
      & li
        list-style: none;
        text-align: center;
        text-transform: uppercase;
        & a
          color: white;
          padding: 8px 0 0;
          width: 100%;
          display: block;
          letter-spacing: -0.06em;
          font-size: 30px;
          line-height: 46px;
          &:hover
            background-color: white;
            color: $pink;
