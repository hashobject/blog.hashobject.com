.post
  margin-bottom: 30px;
  padding: 0 1em;
  position: relative;
  & h1, h2
    font-size: 18px;
    font-weight: bold;
    line-height: 1.2;
  & h1
    text-transform: uppercase;
    margin-bottom: 35px;
  & h2
    color: $blue-light;
    margin: 35px 0 15px;
  & blockquote
    background: $gray-bg;
    border-left: 5px solid $pink;
    color: $gray-dark;
    font-size: 16px;
    font-style: italic;
    margin: 15px 0;
    padding: 15px 15px 15px 25px;
  & pre, code
    background: $gray-dark;
    color: $green-bright;
    display: block;
    font-family: 'Consolas', Courier, monospace;
    margin: 15px 0;
    overflow-x: auto;
    padding: 0;
  & img
    margin: 8px 0;
  & ul
    margin: 15px 0;
    padding-left: 30px;
    & li
      color: $gray-dark;
  & h1 a:before, h2 a:before, h3 a:before, h4 a:before, h5 a:before, h6 a:before
      content:"\2192";
      color:#1ab7ea!important;
      opacity:0;
      margin-right: 2px;
      outline: none;
  & h1:hover a:before, h2:hover a:before, h3:hover a:before, h4:hover a:before, h5:hover a:before, h6:hover a:before{
    opacity:1;

.post-meta
  margin-bottom: 2rem;
  margin-top: 2rem;
  & .author-avatar
    display: inline-block;
    margin-right: 1rem;
    vertical-align: top;
  & .meta-info
    display: inline-block;
  & .meta-label
    display: inline-block;
    min-width: 100px;

.post-discussion
.license.small-12.columns
  color: $gray-dark;
  font-style: italic;
  font-size: 1.0em;
  margin-bottom: 30px;
  padding: 0 1em;
