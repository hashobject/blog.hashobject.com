.post
  & p > code
    margin-left: 0;
    margin-right: 0;
    padding-left: 15px;
    padding-right: 15px;

  & code
  & pre[class="brush: clojure"]
  & pre[class="brush: shell"]
  & div.highlight
    font-family: Courier, monospace;
    font-weight: normal;
    color: $green-bright;
    background-color: $dark-bg;
    display: block;
    margin: 0;
    padding: 0;
    & .s
      color: $pink;

    & .p
    & .o
    & .se
      color: $gray-bg;
    & .mi
    & .mo
    & .mf
      color: $gray-bg;
  & div.highlight
    padding: 10px;
